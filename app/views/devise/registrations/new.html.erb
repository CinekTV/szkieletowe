<div class="container text-center" style="width: 20%">

  <div class="card" style="background-color: #ced4da">
    <h1 class="card-header">Zarejestruj się</h1>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-label">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <br/>
      <div class="field form-label">
        <%= f.label :Hasło %>
        <% if @minimum_password_length %><br/>
        <em>(Minimum <%= @minimum_password_length %> znaków)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
      <br/>
      <div class="field form-label">
        <%= f.label :Potwierdź_hasło %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
      <br/>
      <div class="actions">
        <%= f.submit "Zatwierdź", class: "btn btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
  <br/>
  <%= render "devise/shared/links" %>
</div>